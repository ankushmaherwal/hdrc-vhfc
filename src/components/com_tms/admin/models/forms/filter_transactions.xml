<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field name="search" type="text" label="COM_TMS_SEARCH_IN_TITLE" hint="JSEARCH_FILTER" class="js-stools-search-string" />
		<field name="published" type="list" label="JOPTION_SELECT_PUBLISHED" description="JOPTION_SELECT_PUBLISHED_DESC" onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		<field name="category_id" type="category" extension="com_tms.transaction" label="COM_TMS_TRANSACTIONS_CATEGORY_FILTER" description="COM_TMS_TRANSACTIONS_CATEGORY_FILTER_DESC" onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field name="account_id" type="sql" query="SELECT id, title FROM #__transport_account" key_field="id" value_field="title" sql_where="published=1" label="COM_TMS_TRANSACTION_ACCOUNT_ID" description="COM_TMS_TRANSACTION_ACCOUNT_ID" required="true" default="" onchange="this.form.submit();">
			<option value="">COM_TMS_TRANSACTION_SELECT_ACCOUNT</option>
		</field>
	</fields>
	<fields name="list">
		<field name="limit" type="limitbox" label="COM_CONTENT_LIST_LIMIT" description="COM_CONTENT_LIST_LIMIT_DESC" class="input-mini" default="25" onchange="this.form.submit();" />
	</fields>
</form>
