		<field name="inam" type="number" label="COM_TMS_CHALAN_ITEM_INAM" description="COM_TMS_CHALAN_ITEM_INAM_DESC" class="requiredItem"/>
		<field name="receiver" type="text" label="COM_TMS_CHALAN_ITEM_SHOP_NUMBER" description="COM_TMS_CHALAN_ITEM_SHOP_NUMBER_DESC" class="requiredItem"/>
		<field name="remarks" type="text" label="COM_TMS_CHALAN_ITEM_REMARKS" description="COM_TMS_CHALAN_ITEM_REMARKS_DESC" />
		<field name="chalan_id" type="hidden" />
	</fieldset>
</form>
