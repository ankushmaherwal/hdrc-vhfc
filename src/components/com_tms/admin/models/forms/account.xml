<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="general" addfieldpath="/administrator/components/com_categories/models/fields">
		<field name="id" type="hidden" class="readonly" size="10" default="0" readonly="true"/>
		<field name="title" type="text" label="COM_TMS_ACCOUNT_TITLE" description="COM_TMS_ACCOUNT_TITLE_DESC" size="50" required="true" />
		<field name="published" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="chzn-color-state" filter="intval" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		<field name="category_id" type="categoryedit" extension="com_tms.account" label="COM_TMS_ACCOUNT_CATEGORY" description="COM_TMS_ACCOUNT_CATEGORY_DESC" required="true" default="" />
		<field name="alias" type="text" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" hint="JFIELD_ALIAS_PLACEHOLDER" size="50" />
		<field name="contact_number" type="number" class="validate validate-contactnumber" size="12" label="COM_TMS_ACCOUNT_CONTACT_NUMBER" description="COM_TMS_ACCOUNT_CONTACT_NUMBER_DESC" />
		<field name="payment_details" type="textarea" rows="5" cols="50" label="COM_TMS_ACCOUNT_PAYMENT_DETAILS" description="COM_TMS_ACCOUNT_PAYMENT_DETAILS_DESC" />
		<field name="address" type="textarea" rows="5" cols="50" label="COM_TMS_ACCOUNT_ADDRESS" description="COM_TMS_ACCOUNT_ADDRESS_DESC" />
		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />
		<field name="created" type="hidden" />
		<field name="created_by" type="hidden" />
		<field name="modified" type="hidden" />
		<field name="modified_by" type="hidden" />
	</fieldset>
</form>
